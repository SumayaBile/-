<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gridiant"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity5">
    <include
        android:id="@+id/include"
        layout="@layout/tolbar" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="210dp"
        android:layout_height="170dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/civil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="207dp"
        android:layout_height="73dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/butonstyle"
        android:gravity="center"
        android:text="القانون المدني"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView2"
        android:layout_width="215dp"
        android:layout_height="145dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/criminal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:shapeAppearanceOverlay="@style/circular" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="217dp"
        android:layout_height="74dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/butonstyle"
        android:gravity="center"
        android:text="القانون الدولي"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/shapeableImageView3"
        android:layout_width="219dp"
        android:layout_height="152dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/cimonaltrue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:shapeAppearanceOverlay="@style/circular" />

    <TextView

        android:id="@+id/text_v"
        android:layout_width="215dp"
        android:layout_height="70dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/butonstyle"
        android:gravity="center"
        android:text="القانون الجنائي"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>